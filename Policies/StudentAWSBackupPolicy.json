{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ViewEverything",
            "Effect": "Allow",
            "Action": [
                "backup:Get*",
                "backup:List*",
                "backup:Describe*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "VisualEditor1",
            "Effect": "Allow",
            "Action": [
                "backup:StartBackupJob",
                "backup:DeleteBackupVault",
                "backup:CreateBackupVault",
                "backup:CreateBackupPlan",
                "backup:UpdateBackupPlan",
                "backup:DeleteBackupPlan"
            ],
            "Resource": [
                "arn:aws:backup:*:538493143704:backup-vault:*",
                "arn:aws:backup:*:538493143704:backup-plan:*"
            ]
        },
        {
            "Sid": "VisualEditor2",
            "Effect": "Allow",
            "Action": [
                "backup:ExportBackupPlanTemplate",
                "backup:StopBackupJob",
                "backup:StartRestoreJob",
                "backup:StartCopyJob"
            ],
            "Resource": "*"
        }
    ]
}