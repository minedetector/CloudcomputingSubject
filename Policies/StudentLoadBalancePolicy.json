{
    "Version": "2012-10-17",
    "Statement": [
    {
        "Sid": "AllowLoadBalancing",
        "Effect": "Allow",
        "Action": [
            "elasticloadbalancing:*"
        ],
        "Resource": "*"
    },
    {
        "Sid": "AllowLoadBalancerCreate",
        "Effect": "Allow",
        "Action": [
            "elasticloadbalancing:CreateLoadBalancer"
        ],
        "Resource": "*"    
    },
    {
        //todo Specify actions
        "Sid": "AllowLoadBalancingModification",
        "Effect": "Allow",
        "Action": [
            "*"
        ],
        "Resource": "*"
    },
    {
        "Sid": "AllowRuleCreate",
        "Effect": "Allow",
        "Action": "iam:CreateServiceLinkedRole",
        "Resource": "*",
        "Condition": {
            "StringEquals": {
                "iam:AWSServiceName": "elasticloadbalancing.amazonaws.com"
            }
        }
    }
    ]
  }