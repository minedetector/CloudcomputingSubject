{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowTagsOnEC2",
            "Effect": "Allow",
            "Action": "ec2:CreateTags",
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "ec2:CreateAction": [
                        "RunInstances",
                        "CreateSecurityGroup",
                        "CreateVolume",
                        "CreateSnapshot",
                        "CreateKeyPair",
                        "CreateVpc",
                        "CreateSubnet",
                        "CreateRouteTable",
                        "CreateRoute",
                        "CreateInternetGateway",
                        "CreateLaunchTemplate",
                        "CreateLaunchTemplateVersion",
                        "AllocateAddress"
                    ]
                }
            }
        },
        {
            "Sid": "TagLoadBalancer",
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:AddTags"
            ],
            "Resource": "*"    
        },
        {
            "Sid": "TagCloudWatch",
            "Effect": "Allow",
            "Action": "cloudwatch:TagResource",
            "Resource": "*"
        },
        {
            "Sid": "TagCloudTrail",
            "Effect": "Allow",
            "Action": "cloudtrail:AddTags",
            "Resource": "*"
        },
        {
            "Sid": "TagS3Bucket",
            "Effect": "Allow",
            "Action": "s3:PutBucketTagging",
            "Resource": "arn:aws:s3:::*"
        },
        {
            "Sid": "TagS3Objects",
            "Effect": "Allow",
            "Action": [
                "s3:PutObjectVersionTagging",
                "s3:PutObjectTagging"
            ],
            "Resource": "arn:aws:s3:::*/*"
        },
        {
            "Sid": "TagBackup",
            "Effect": "Allow",
            "Action": [
                "backup:TagResource"
            ],
            "Resource": "*"
        },
        {
            "Sid": "TagRDS",
            "Effect": "Allow",
            "Action": "rds:AddTagsToResource",
            "Resource" : "*",
            "Condition" : { 
                "streq" : { 
                    "rds:req-tag/User" : "${aws:username}"
                }
            }
        },
        {
            "Sid": "TagDynamoDB",
            "Effect": "Allow",
            "Action": "dynamodb:TagResource",
            "Resource": "*"
        },
        {
            "Sid": "TagCloud9",
            "Effect": "Allow",
            "Action": "cloud9:TagResource",
            "Resource": "*"
        }
    ]
}