{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowTagsOnEC2",
            "Effect": "Allow",
            "Action": "ec2:CreateTags",
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "ec2:CreateAction": [
                        "RunInstances",
                        "CreateSecurityGroup",
                        "CreateVolume",
                        "CreateSnapshot",
                        "CreateKeyPair",
                        "CreateVpc",
                        "CreateSubnet",
                        "CreateRouteTable",
                        "CreateRoute",
                        "CreateInternetGateway",
                        "CreateLaunchTemplate",
                        "CreateLaunchTemplateVersion",
                        "AllocateAddress"
                    ]
                }
            }
        },
        {
            "Sid": "TagS3Bucket",
            "Effect": "Allow",
            "Action": "s3:PutBucketTagging",
            "Resource": "arn:aws:s3:::*"
        },
        {
            "Sid": "TagS3Objects",
            "Effect": "Allow",
            "Action": [
                "s3:PutObjectVersionTagging",
                "s3:PutObjectTagging"
            ],
            "Resource": "arn:aws:s3:::*/*"
        }
    ]
}