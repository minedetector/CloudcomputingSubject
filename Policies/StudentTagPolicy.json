{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "VisualEditor0",
        "Effect": "Allow",
        "Action": "ec2:CreateTags",
        "Resource": [
          "arn:aws:ec2:*:*:*"
        ],
        "Condition": {
          "StringEquals": {
            "ec2:CreateAction": [
              "RunInstances",
              "CreateVolume",
              "CreateSnapshot"
            ]
          }
        }
      }
    ]
  }