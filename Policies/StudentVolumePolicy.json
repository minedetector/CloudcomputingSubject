{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AllowRunInstancesWithRestrictions",
        "Effect": "Allow",
        "Action": "ec2:CreateVolume",
        "Resource": [
          "arn:aws:ec2:*:*:volume/*",
          "arn:aws:ec2:*:*:instance/*"
        ],
        "Condition": {
          "StringEquals": {
            "aws:RequestTag/User": "${aws:username}"
          },
          "ForAllValues:StringEquals": {
            "aws:TagKeys": "User"
          }
        }
      },
      {
        "Sid": "ManageVolume",
        "Effect": "Allow",
        "Action": [
          "ec2:DetachVolume",
          "ec2:AttachVolume",
          "ec2:DeleteVolume",
          "ec2:ModifyVolume",
          "ec2:ModifyVolumeAttribute"
        ],
        "Resource": "*",
        "Condition": {
          "StringEquals": {
            "ec2:ResourceTag/User": "${aws:username}"
          }
        }
      },
      {
        "Sid": "VisualEditor2",
        "Effect": "Allow",
        "Action": "ec2:ImportSnapshot",
        "Resource": "arn:aws:ec2:*::snapshot/*"
      },
      {
        "Sid": "AllowCreateTagsOnlyLaunching",
        "Effect": "Allow",
        "Action": [
          "ec2:CreateTags"
        ],
        "Resource": [
          "arn:aws:ec2:*:*:volume/*",
          "arn:aws:ec2:*:*:instance/*"
        ],
        "Condition": {
          "StringEquals": {
            "ec2:CreateAction": "CreateVolume"
          }
        }
      }
    ]
  }